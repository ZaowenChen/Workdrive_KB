# ---- Zoho OAuth ----
ZOHO_ACCOUNTS_HOST=https://accounts.zoho.com
ZOHO_OAUTH_CLIENT_ID=YOUR_CLIENT_ID
ZOHO_OAUTH_CLIENT_SECRET=YOUR_CLIENT_SECRET
ZOHO_REFRESH_TOKEN=YOUR_REFRESH_TOKEN   # authorization-code (offline) flow
ZOHO_SCOPES=WorkDrive.files.READ,WorkDrive.files.UPDATE,WorkDrive.teamfolders.READ,WorkDrive.dataTemplates.ALL

# ---- WorkDrive ----
WORKDRIVE_API_BASE=https://workdrive.zoho.com/api/v1
TEAMFOLDER_ID=YOUR_TEAMFOLDER_ID

# ---- Tokens cache ----
TOKEN_CACHE=token.json

# ---- Optional LLM ----
OPENAI_API_KEY=
ENABLE_LLM=false

# ---- Extraction ----
EXCERPT_MAX_CHARS=15000
ENABLE_TESSERACT=false
ENABLE_DOC_CONVERSION=false   # requires libreoffice --headless

# ---- App ----
DB_PATH=data/workdrive.db
DATA_TEMPLATE_NAME=Cobotiq Document Metadata
